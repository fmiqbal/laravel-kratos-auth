{
    "name": "fmiqbal/laravel-kratos-auth",
    "description": "Laravel Auth Guard for Ory Kratos",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Fikri Muhammad Iqbal",
            "email": "fikri.miqbal23@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^9.0|^10.0|^11.0",
        "ory/client": "^1.16"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "orchestra/testbench": "^9.9"
    },
    "autoload": {
        "psr-4": {
            "Fmiqbal\\KratosAuth\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fmiqbal\\KratosAuth\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ],
        "test": [
            "@clear",
            "@php /vendor/bin/phpunit --coverage-text=coverage.xml  --coverage-cobertura=coverage-cobertura.xml --log-junit=report.xml --coverage-clover=coverage-clover.xml"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    }
}
